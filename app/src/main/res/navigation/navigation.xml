<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/recipesFragment"
        android:name="com.zongmin.cook.recipes.RecipesFragment"
        android:label="RecipesFragment"
        tools:layout="@layout/fragment_recipes" />
    <fragment
        android:id="@+id/managmentFragment"
        android:name="com.zongmin.cook.management.ManagementFragment"
        android:label="ManagmentFragment"
        tools:layout="@layout/fragment_management" />
    <fragment
        android:id="@+id/planFragment"
        android:name="com.zongmin.cook.plan.PlanFragment"
        android:label="PlanFragment"
        tools:layout="@layout/fragment_plan" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.zongmin.cook.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/socialFragment"
        android:name="com.zongmin.cook.social.SocialFragment"
        android:label="SocialFragment"
        tools:layout="@layout/fragment_social" />

    <fragment
        android:id="@+id/detailRecipesFragment"
        android:name="com.zongmin.cook.detail.DetailRecipesFragment"
        android:label="DetailRecipesFragment"
        tools:layout="@layout/fragment_detail_recipes">

        <argument
            android:name="recipe"
            app:argType="com.zongmin.cook.data.Recipe"
            app:nullable="false" />

    </fragment>

    <fragment
        android:id="@+id/editRecipesFragment"
        android:name="com.zongmin.cook.edit.EditRecipesFragment"
        android:label="EditRecipesFragment"
        tools:layout="@layout/fragment_edit_recipes">

        <argument
            android:name="recipe"
            app:argType="com.zongmin.cook.data.Recipe"
            app:nullable="true" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.zongmin.cook.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/followFragment"
        android:name="com.zongmin.cook.follow.FollowFragment"
        android:label="FollowFragment"
        tools:layout="@layout/fragment_follow">

    </fragment>


    <action
        android:id="@+id/navigate_to_recipes_fragment"
        app:destination="@+id/recipesFragment"
        app:popUpTo="@id/navigation"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/navigate_to_managment_fragment"
        app:destination="@+id/managmentFragment"
        app:popUpTo="@id/navigation"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/navigate_to_plan_fragment"
        app:destination="@+id/planFragment"
        app:popUpTo="@id/navigation"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/navigate_to_profile_fragment"
        app:destination="@+id/profileFragment"
        app:popUpTo="@id/navigation"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/navigate_to_social_fragment"
        app:destination="@+id/socialFragment"
        app:popUpTo="@id/navigation"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/navigate_to_detail_recipes_fragment"
        app:destination="@+id/detailRecipesFragment" />

    <action
        android:id="@+id/navigate_to_edit_recipes_fragment"
        app:destination="@+id/editRecipesFragment" />


    <action
        android:id="@+id/navigate_to_login"
        app:destination="@+id/loginFragment"
        app:popUpTo="@id/navigation"
        app:popUpToInclusive="true"/>

    <action
        android:id="@+id/navigate_to_follow"
        app:destination="@+id/followFragment"
        app:popUpTo="@+id/profileFragment"
        app:popUpToInclusive="true" />


</navigation>