<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".dialog.DialogPlan">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:background="@drawable/bg_corner"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button_dialog_yesterday"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@android:color/transparent"
                android:text="&lt;"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toStartOf="@+id/text_dialog_date"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
<!--            android:layout_marginTop="16dp"-->

            <TextView
                android:id="@+id/text_dialog_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:text="2022/6/20"
                app:layout_constraintBottom_toBottomOf="@+id/button_dialog_yesterday"
                app:layout_constraintEnd_toStartOf="@+id/button_dialog_tomorrow"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/button_dialog_yesterday"
                app:layout_constraintTop_toTopOf="@+id/button_dialog_yesterday" />

            <Button
                android:id="@+id/button_dialog_tomorrow"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:background="@android:color/transparent"
                android:text="&gt;"
                app:layout_constraintBottom_toBottomOf="@+id/text_dialog_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/text_dialog_date"
                app:layout_constraintTop_toTopOf="@+id/text_dialog_date" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_dialog"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_dialog_yesterday"
                tools:listitem="@layout/item_dialog"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>