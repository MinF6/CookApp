<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ingredient"
            type="com.zongmin.cook.data.Ingredient" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/item_icon"
            android:src="@drawable/ic_baseline_local_dining_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_ingredient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{ingredient.ingredientName}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:text="食材名稱" />

        <TextView
            android:id="@+id/text_ingredient_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{ingredient.quantity}"
            app:layout_constraintBottom_toBottomOf="@+id/text_ingredient_name"
            app:layout_constraintStart_toEndOf="@+id/text_ingredient_name"
            app:layout_constraintTop_toTopOf="@+id/text_ingredient_name"
            tools:text="食材數量" />

        <TextView
            android:id="@+id/text_ingredient_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{ingredient.unit}"
            app:layout_constraintBottom_toBottomOf="@+id/text_ingredient_quantity"
            app:layout_constraintStart_toEndOf="@+id/text_ingredient_quantity"
            app:layout_constraintTop_toTopOf="@+id/text_ingredient_quantity"
            tools:text="食材單位" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>