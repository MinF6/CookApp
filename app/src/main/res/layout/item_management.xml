<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="management"
            type="com.zongmin.cook.data.Management" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_management_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@{management.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="食材名稱"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_baseline_local_dining_24"
            app:layout_constraintStart_toStartOf="@+id/text_management_name"
            app:layout_constraintTop_toBottomOf="@+id/text_management_name" />

        <TextView
            android:id="@+id/text_management_belong_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{management.belong}"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:text="料理名稱"/>

        <TextView
            android:id="@+id/text_management_ingredient_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{management.quantity}"
            android:textColor="#00aa00"
            app:layout_constraintBottom_toBottomOf="@+id/text_management_belong_name"
            app:layout_constraintStart_toEndOf="@+id/text_management_belong_name"
            app:layout_constraintTop_toTopOf="@+id/text_management_belong_name"
            tools:text="食材數量"/>

        <TextView
            android:id="@+id/text_management_ingredient_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{management.unit}"
            android:textColor="#00aa00"
            app:layout_constraintBottom_toBottomOf="@+id/text_management_ingredient_quantity"
            app:layout_constraintStart_toEndOf="@+id/text_management_ingredient_quantity"
            app:layout_constraintTop_toTopOf="@+id/text_management_ingredient_quantity"
            tools:text="食材單位"/>

        <CheckBox
            android:id="@+id/checkbox_management"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:checked="@{management.prepare}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="16dp"
            android:background="#aaaaaa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>