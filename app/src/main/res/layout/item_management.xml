<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_management_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="食材名稱"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_baseline_catching_pokemon_24"
            app:layout_constraintStart_toStartOf="@+id/text_management_name"
            app:layout_constraintTop_toBottomOf="@+id/text_management_name" />

        <TextView
            android:id="@+id/text_management_belong_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="料理名稱"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/text_management_ingredient_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="食材數量"
            android:textColor="#00aa00"
            app:layout_constraintBottom_toBottomOf="@+id/text_management_belong_name"
            app:layout_constraintStart_toEndOf="@+id/text_management_belong_name"
            app:layout_constraintTop_toTopOf="@+id/text_management_belong_name" />

        <TextView
            android:id="@+id/text_management_ingredient_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00aa00"
            android:text="食材單位"
            app:layout_constraintBottom_toBottomOf="@+id/text_management_ingredient_quantity"
            app:layout_constraintStart_toEndOf="@+id/text_management_ingredient_quantity"
            app:layout_constraintTop_toTopOf="@+id/text_management_ingredient_quantity" />

        <CheckBox
            android:id="@+id/checkbox_managment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="16dp"
            android:background="#aaaaaa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>