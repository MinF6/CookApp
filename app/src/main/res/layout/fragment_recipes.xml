<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recipes.RecipesFragment">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_recipes"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@+id/edittext_recipes_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--        app:layout_constraintBottom_toTopOf="@+id/radioGroup_recipes"-->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_recipes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tabIndicatorColor="#3f3a3a"
            app:tabSelectedTextColor="#3f3a3a"
            app:tabTextColor="#888888">

        </com.google.android.material.tabs.TabLayout>

    </androidx.viewpager.widget.ViewPager>

    <EditText

        android:id="@+id/edittext_recipes_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_search"
        android:textSize="16dp"
        android:hint="@string/recipes_search"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/button_reicpes_search"
        app:layout_constraintEnd_toStartOf="@+id/button_reicpes_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_reicpes_search" />


    <Button
        android:id="@+id/button_reicpes_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜尋"

        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/button_nav_new"
        app:layout_constraintEnd_toStartOf="@+id/button_recipes_clear" />

    <Button
        android:id="@+id/button_recipes_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清除條件"
        app:layout_constraintBottom_toTopOf="@+id/button_nav_new"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/button_nav_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增食譜"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
<!--    -->

    <Button
        android:id="@+id/button_recipes_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="06/22(三)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_nav_new" />

    <RadioGroup
        android:id="@+id/radioGroup_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="早餐" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="午餐" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晚餐" />
    </RadioGroup>


    <!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="食譜區也就是Home"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

</androidx.constraintlayout.widget.ConstraintLayout>


</layout>


