            <!--                app:layout_constraintEnd_toStartOf="@+id/edittext_unit"-->
            <!--                app:layout_constraintHorizontal_bias="0.5"-->
            <!--                app:layout_constraintStart_toEndOf="@+id/edittext_ingredient_name"-->
